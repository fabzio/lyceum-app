{
  "name": "crud",
  "module": "server.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun run build && ./dist/myapp",
    "dev": "NODE_ENV=development bun --hot ./src/server.ts",
    "build:tsc": "tsc",
    "build": "bun build --compile --minify --sourcemap ./src/server.ts --outfile ./dist/myapp",
    "prepare": "husky",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun ./src/database/migrate.ts"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "0.24.2",
    "husky": "9.1.6",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "@hono/zod-validator": "0.3.0",
    "drizzle-orm": "0.33.0",
    "drizzle-zod": "0.5.1",
    "hono": "4.6.3",
    "postgres": "3.4.4",
    "zod": "3.23.8"
  }
}
